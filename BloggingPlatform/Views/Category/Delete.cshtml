@model Category

<div class="card border-0 mt-5">
    <div class="card-header bg-transparent">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="p-3">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-controller="Category" asp-action="Delete" method="post">
            <input asp-for="Id" hidden />
            <div class="mt-3">
                <label for="name" class="form-label ms-1">Category Name</label>
                <input type="text" class="form-control shadow-sm mb-1" id="name" name="Name" value="@Model.Name" disabled>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row mt-4">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">
                        Back to list
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>